# Environment Configuration for SignBridge Platform
# This file should be copied to .env and customized for your environment

# Application Settings
APP_NAME=SignBridge Enhanced Multi-Pipeline Backend
VERSION=2.0.0
DEBUG=false
ENVIRONMENT=production

# Server Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
SIGN_DETECTION_HOST=0.0.0.0
SIGN_DETECTION_PORT=8001
SPEECH_TO_SIGN_HOST=0.0.0.0
SPEECH_TO_SIGN_PORT=8002

# Firebase Configuration
# Hosting Firebase Project (for frontend deployment)
FIREBASE_HOSTING_PROJECT_ID=signbridge-hosting
FIREBASE_HOSTING_API_KEY=your-hosting-api-key-here
FIREBASE_HOSTING_AUTH_DOMAIN=signbridge-hosting.firebaseapp.com
FIREBASE_HOSTING_DATABASE_URL=https://signbridge-hosting-default-rtdb.firebaseio.com
FIREBASE_HOSTING_STORAGE_BUCKET=signbridge-hosting.appspot.com

# API Functions Firebase Project (for backend deployment)
FIREBASE_API_PROJECT_ID=signbridge-api-functions
FIREBASE_API_PRIVATE_KEY_ID=your-api-private-key-id
FIREBASE_API_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
FIREBASE_API_CLIENT_EMAIL=firebase-adminsdk-xxxxx@signbridge-api-functions.iam.gserviceaccount.com
FIREBASE_API_CLIENT_ID=your-client-id
FIREBASE_API_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_API_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_API_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_API_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40signbridge-api-functions.iam.gserviceaccount.com

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GCP_PROJECT_ID=signbridge-api-functions
GCP_STORAGE_BUCKET=signbridge-api-functions-storage

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/signbridge_db
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random
JWT_SECRET_KEY=your-jwt-secret-key-for-token-signing
API_KEYS=["dev-api-key-1", "prod-api-key-2"]

# CORS Origins (Frontend URLs)
CORS_ORIGINS=["https://signbridge-hosting.web.app", "https://signbridge-hosting.firebaseapp.com", "http://localhost:5173", "http://localhost:3000"]

# ML Model Paths
SIGN_DETECTION_MODEL_PATH=models/best.pt
YOLO_MODEL_PATH=models/yolo11n.pt
FINE_TUNED_MODEL_PATH=models/fine_tuned.pt

# Media Storage
VIDEO_CDN_BASE_URL=https://storage.googleapis.com/signbridge-api-functions-storage/videos/
GIFS_DIRECTORY=assets/sign_gifs
UPLOAD_MAX_SIZE_MB=50
ALLOWED_VIDEO_FORMATS=["mp4", "avi", "mov", "webm"]
ALLOWED_IMAGE_FORMATS=["jpg", "jpeg", "png", "webp"]

# Text-to-Speech Configuration
TTS_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Standard-A
TTS_AUDIO_ENCODING=LINEAR16

# Performance Settings
MAX_WORKERS=4
TIMEOUT_SECONDS=30
MAX_CONCURRENT_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30